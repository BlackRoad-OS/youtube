{
  "name": "@blackroad-os/youtube-workers",
  "version": "1.0.0",
  "description": "YouTube video publishing and media channels for BlackRoad system - Cloudflare Workers with Agent Automation",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "sync:repos": "node scripts/sync-repos.mjs",
    "agents:status": "wrangler d1 execute blackroad-agents --command 'SELECT * FROM agent_tasks ORDER BY updated_at DESC LIMIT 20'",
    "agents:health": "curl -s https://youtube.blackroad.workers.dev/api/agents/health | jq"
  },
  "keywords": [
    "cloudflare-workers",
    "blackroad",
    "youtube",
    "agents",
    "automation",
    "self-healing"
  ],
  "author": "BlackRoad-OS",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "wrangler": "^3.99.0"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
